
# Set up the environment for command-line and notebook based execution.
# This file should be run as follows:
# source setup

# Do this if operating in a virtual environment.
source ../venv/bin/activate

here=`pwd`

# SPARK_HOME is used to find the spark python libraries and jars
export SPARK_HOME=~/spark
export SPARK_CONF_DIR=$here/xframes/conf

# XFRAMES_HOME is used to find default.ini and to ship code to slaves.
export XFRAMES_HOME=$here

# PYTHONPATH is used to find the xFrames python libraries
export PYTHONPATH=${XFRAMES_HOME}:${SPARK_HOME}/python:${SPARK_HOME}/python/lib/py4j-0.8.2.1-src.zip

