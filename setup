
# Set up the environment for command-line and notebook based execution.
# This file should be run as follows:
# source setup

. venv/bin/activate

here=`pwd`

# SPARK_HOME is used to find the spark python libraries and jars
export SPARK_HOME=~/spark
export SPARK_CONF_DIR=$here/conf

# PYTHONPATH is used to find the xpatterns python libraries
export PYTHONPATH=$here:${SPARK_HOME}/python:${SPARK_HOME}/python/lib/py4j-0.8.2.1-src.zip

# XPATTERNS_HOME is used to find config.ini
export XPATTERNS_HOME=$here
